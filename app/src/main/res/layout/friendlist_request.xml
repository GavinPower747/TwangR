<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/FriendRealName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="10dp"
        android:id="@+id/FriendUserName"
        android:layout_alignBottom="@+id/FriendAccept"
        android:layout_toLeftOf="@+id/FriendAccept"
        android:layout_toStartOf="@+id/FriendAccept" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/FriendsList_AcceptFriend"
        android:id="@+id/FriendAccept"
        android:layout_alignBottom="@+id/FriendRealName"
        android:layout_toLeftOf="@+id/FriendDecline" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/FriendsList_DeclineFriend"
        android:id="@+id/FriendDecline"
        android:layout_alignTop="@+id/FriendAccept"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>